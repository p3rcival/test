{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["expo-router/entry"]
  },
  "include": ["./app", "./src"],
  "exclude": ["node_modules"]
}